@model PersonelTakip.Controllers.Resources.SifreDegistirResource
@{
    ViewData["Title"] = "Şifre Değiştir";
}

<div class="d-flex justify-content-center align-items-center">
    <h2>@ViewData["Title"]</h2>
</div>

<div class="d-flex justify-content-center align-items-center">
    <form method="post">
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <input asp-for="guncelSifre" class="form-control" placeholder="Güncel Şifre" />
            <span asp-validation-for="guncelSifre" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="yeniSifre" class="form-control" placeholder="Yeni Şifre" />
            <span asp-validation-for="yeniSifre" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="tekrarYeniSifre" class="form-control" placeholder="Yeni Şifre Tekrar" />
            <span asp-validation-for="tekrarYeniSifre" class="text-danger"></span>
        </div>
        <div class="d-flex justify-content-center align-items-center">
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </div>
    </form>
</div>

