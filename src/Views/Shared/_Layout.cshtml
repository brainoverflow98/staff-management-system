@using System.Security.Claims
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Personel Puantaj Sistemi</title>
    <!-- Bootstrap CSS CDN -->
    <link rel="stylesheet" type="text/css" id="editor-theme" href="~/css/bootstrap.min.css">
    <!-- Our Custom CSS -->
    <link rel="stylesheet" href="~/css/navbar.css">
    <link rel="stylesheet" type="text/css" id="editor-theme" href="~/css/style.css">    

</head>
<body>
    <div class="wrapper">
        <!-- Sidebar Holder -->
        <nav id="sidebar">
            <div class="sidebar-header">
                <img src="~/images/logo.png" alt="">
                <h4>Personel Puantaj Sistemi</h4>
            </div>
            <ul class="list-unstyled components">
                <li>
                    <a asp-action="PersonelListele" asp-controller="Personel">Personel Listesi</a>
                </li>
                <li>
                    <a asp-action="AylikPuantaj" asp-controller="Puantaj">Aylık Puantaj</a>
                </li>
                @if (User.IsInRole("SistemYöneticisi") || User.IsInRole("ÜstDüzeyYetkili") || User.IsInRole("Yetkili"))
                {
                    <li>
                        <a asp-action="PersonelEkle" asp-controller="Personel">Personel Kayıt</a>
                    </li>
                }
                <li>
                    <a asp-action="KullaniciSifreDegistir" asp-controller="Account">Şifre Değiştir</a>
                </li>
                @if (User.IsInRole("SistemYöneticisi"))
                {
                    <li>
                        <a asp-action="Register" asp-controller="Account">Kullanıcı Ekle</a>
                    </li>
                    <li>
                        <a asp-action="Index" asp-controller="Yetkilendirme">Yetkilendirme</a>
                    </li>
                }
            </ul>
        </nav>
        <!-- Page Content Holder Begin -->
        <div id="content">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">
                    Menü
                    <button type="button" id="sidebarCollapse" class="navbar-btn">
                        <span></span>
                        <span></span>
                        <span></span>
                    </button>
                    <button class="btn btn-dark d-inline-block d-lg-none ml-auto" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <i class="fas fa-align-justify"></i>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="nav navbar-nav ml-auto">
                            <li class="nav-item">
                                <a class="nav-link">@User.FindFirst(ClaimTypes.Name).Value</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-action="Logout" asp-controller="Account">Çıkış</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <div class="main">
                @RenderBody()
            </div>              
        </div>
        <!-- Page Content Holder End -->
    </div>

    

    <script src="~/js/popper.min.js"></script>
    <script src="~/js/jquery-3.2.1.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>

    <script src="~/js/xlsx.full.min.js"></script>
    <script src="~/js/FileSaver.min.js"></script>

    <script src="~/js/table-ops.js"></script>
    <script src="~/js/table-events.js"></script>

    <partial name="_ValidationScriptsPartial" />
    @RenderSection("Scripts", required: false)




</body>

</html>